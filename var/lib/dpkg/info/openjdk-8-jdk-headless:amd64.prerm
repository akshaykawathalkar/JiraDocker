#!/bin/sh -e

set -e

jdk_hl_tools='idlj jdeps wsimport jinfo jsadebugd native2ascii jstat javac javah jps jstack jrunscript javadoc javap jar xjc schemagen extcheck jarsigner rmic jstatd jhat jdb serialver wsgen jcmd jmap'
basedir=/usr/lib/jvm/java-8-openjdk-amd64


if [ "$1" = "remove" ] || [ "$1" = "deconfigure" ]; then
    for i in $jdk_hl_tools; do
	update-alternatives --remove $i $basedir/bin/$i
    done
fi


